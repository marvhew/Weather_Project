package com.example.weather_project;

import android.app.Activity;
import android.content.Context;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;
import android.widget.TextView;

public class ForecastDaysListAdapter extends ArrayAdapter<DayForecast> {
	private Context context;
	private int layoutResourceID;
	private DayForecast data[];

	public ForecastDaysListAdapter(Context _context, int _layoutRes,
			DayForecast _data[]) {
		super(_context, _layoutRes, _data);
		context = _context;
		layoutResourceID = _layoutRes;
		data = _data;
	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {

		View row = convertView;
		RowHolder holder = null;

		if (row == null) {
			// wtedy nie widac komorki, zaraz bedzie
			LayoutInflater inflater = ((Activity) context).getLayoutInflater();
			row = inflater.inflate(layoutResourceID, parent, false); // ta linia
																		// juz
																		// jest,
																		// ale
																		// bez
																		// danych

			holder = new RowHolder();
			holder.RowDate = (TextView) row.findViewById(R.id.Txt_Date);
			holder.RowName = (TextView) row.findViewById(R.id.Txt_Preassure);
			holder.RowName = (TextView) row.findViewById(R.id.Txt_Precipitation);
			holder.RowName = (TextView) row.findViewById(R.id.Txt_Temperature);
			holder.RowItemsNumber = (TextView) row
					.findViewById(R.id.RowItemsNumber);
			row.setTag(holder); // sejwowanko dla holdera

		} else {
			// wtedy widac komorke
			holder = (RowHolder) row.getTag();
		}

		ShoppingList item = data[position];
		holder.RowDate.setText(item.GetDate());
		holder.RowName.setText(item.GetName());
		holder.RowItemsNumber.setText((""+item.GetItemsNumber()));

		return row;
	}

	static class RowHolder {
		TextView RowDate;
		TextView RowName;
		TextView RowItemsNumber;
	}
}